---
import Presentation from "../components/Presentation.astro";
import Projects from "../components/Projects.astro";
import StackTechnologies from "../components/StackTechnologies.astro";
import Layout from "../layouts/Layout.astro";
import Inspiration from "../components/Inspiration.astro";
import Github from "../components/Github.astro";
import Linkedin from "../components/Linkedin.astro";
import JobsContainer from "../components/JobsContainer.astro";
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col h-screen mt-1 gap-4 w-[900px]">
    <section class="grid grid-cols-12 grid-rows-12 gap-4">
      <Presentation />
      <StackTechnologies />
      <Inspiration />
    </section>
    <section class="grid grid-cols-12">
      <Projects />
    </section>
    <section class="grid grid-cols-12 gap-4">
      <Github />
      <Linkedin />
    </section>
    <section>
      <JobsContainer />
    </section>
  </main>
</Layout>
